<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>
    <%= title%>
  </title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="/dashboard/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dashboard/dist/css/AdminLTE.min.css">

  <link rel="stylesheet" href="/dashboard/dist/css/skins/skin-blue.min.css">
  <link rel="stylesheet" href="/assets/css/categorylist.css">

</head>

<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <!-- Main Header -->
    <% include ../partials/header %>
    <!-- Left side column. contains the logo and sidebar -->
    <% include ../partials/leftmenu %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          <%= title%>
          <small>more Info</small>
        </h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
          <li class="active">Here</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">

        <!-- Your Page Content Here -->
        <div class="row">
          <div class="col-xs-12">
            <div class="box">
              <div class="box-header">
                <h3 class="box-title">
                  <%= title%>
                </h3>
                <!-- Button trigger modal -->               
                <div class="box-tools">
                  <form action="/private/products/product_statistic" method="POST"  id="searchProduct">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <div class="input-group-btn">
                      <button type="submit" class="btn btn-primary">StatisticBy</button>
                    </div>                        
                    <select class="form-control" name="categoryIDSearch" id="categorySeach">
                        <option value="0">--All--</option>
                        <%if(categories.length>0){
                            for(let category of categories){%>
                          <option value="<%=category.id%>">
                            <%=category.CategoryName%>
                          </option>
                          <%}
                          }%>
                      </select>                    
                  </div>
                  </form>
                </div>
              </div>
              <!-- /.box-header -->
              <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                  <tbody>
                    <tr>
                      <th>ID#</th>
                      <th>Product Name</th>
                      <th>Image</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Subtotal</th>
                    </tr>
                    <%if(products.length>0){
                          let total=0;
                          let Qty=0;
                          let stt=0;
                          let unit;
                          for(let prod of products){                            
                            subtotal=prod.quantity*prod.cost_price;
                            Qty+=prod.quantity;
                            total+=subtotal;
                            unit=prod.unit;
                            stt=stt+1;
                            %>
                    <tr>
                      <td>
                        <%=stt%>
                      </td>
                      <td>
                        <%=prod.name%>
                      </td>
                      <td>
                        <img src="/assets/upload/images/<%=prod.image%>" class="category-img"/>
                      </td>
                      <td>
                        <%=prod.cost_price%>
                      </td>
                      <td>
                        <%=prod.quantity%>
                      </td>
                      <td><span><%=subtotal%> </span><strong> (<%=unit%>) </strong></td>
                    </tr>
                    <%}%>
                    <tr>
                      <td colspan="4"></td>
                      <td><strong>Qty: </strong></td>
                      <td><strong class="label label-success">
                          <%=Qty%> (Items) </strong></td>
                    </tr>
                    <tr>
                      <td colspan="4"></td>
                      <td><strong>Total: </strong></td>
                      <td><strong class="label label-success">
                          <%=total%> (<%=unit%>) </strong></td>
                    </tr>
                    <%}%>
                  </tbody>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
            <!-- /.box -->
          </div>
        </div><br>        
        <div class="row">
          <div class="col-xs-6"><div id="qty_piechart_3d" style="width: 100%; height: 500px;"></div></div>
          <div class="col-xs-6"><div id="price_piechart_3d" style="width: 100%; height: 500px;"></div></div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <% include ../partials/footer%>

    <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
  </div>
  <!-- ./wrapper -->

  <!-- REQUIRED JS SCRIPTS -->

  <!-- jQuery 2.2.3 -->
  <script src="/dashboard/plugins/jQuery/jquery-2.2.3.min.js"></script>
  <!-- Bootstrap 3.3.6 -->
  <script src="/dashboard/bootstrap/js/bootstrap.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/dashboard/dist/js/app.min.js"></script>

  <!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. Slimscroll is required when using the
     fixed layout. -->

</body>

</html>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
     <script type="text/javascript">
      var chartQtyData=<%-chartQtyData%>;        
       google.charts.load("current", {packages:["corechart"]});
       google.charts.setOnLoadCallback(drawChart);
       function drawChart() {
         var data = google.visualization.arrayToDataTable(chartQtyData);
 
         var options = {
           title: 'Quantity Statistic',
           is3D: true,
         };
 
         var chart = new google.visualization.PieChart(document.getElementById('qty_piechart_3d'));
         chart.draw(data, options);
       }
</script>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
     <script type="text/javascript">
      var chartMoneyData=<%-chartMoneyData%>;        
       google.charts.load("current", {packages:["corechart"]});
       google.charts.setOnLoadCallback(drawChart);
       function drawChart() {
         var data = google.visualization.arrayToDataTable(chartMoneyData);
 
         var options = {
           title: 'Money Statistic',
           is3D: true,
         };
 
         var chart = new google.visualization.PieChart(document.getElementById('price_piechart_3d'));
         chart.draw(data, options);
       }
</script>