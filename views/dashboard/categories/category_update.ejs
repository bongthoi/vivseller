<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>
    <%= title%>
  </title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="/dashboard/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dashboard/dist/css/AdminLTE.min.css">

  <link rel="stylesheet" href="/dashboard/dist/css/skins/skin-blue.min.css">


</head>

<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <!-- Main Header -->
    <% include ../partials/header %>
      <!-- Left side column. contains the logo and sidebar -->
      <% include ../partials/leftmenu %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
          <!-- Content Header (Page header) -->
          <section class="content-header">
            <h1>
              <%= title%>
                <small>more Info</small>
            </h1>
            <ol class="breadcrumb">
              <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
              <li class="active">Here</li>
            </ol>
          </section>

          <!-- Main content -->
          <section class="content">

            <!-- Your Page Content Here -->
            <div class="row">
              <div class="col-xs-12">
                <div class="box">
                  <div class="box-header">
                    <h3 class="box-title">
                      <%= title%>
                    </h3>
                    <div class="box-tools">
                      <div class="input-group input-group-sm" style="width: 150px;">

                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                          <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- /.box-header -->
                  <div class="row">
                    <%if(category){%>
                      <div class="col-xs-12">
                        <form action="/private/categories/updateCategory/<%=category.id%>" method="POST" enctype="multipart/form-data">
                          <div class="col-xs-12">
                            <div class="form-group">
                              <label for="CategoryName">Name</label>
                              <input type="text" id="CategoryName" name="CategoryName" value="<%=category.CategoryName%>" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                              <label for="CategoryDes">Description</label>
                              <textarea id="CategoryDes" name="CategoryDes" class="form-control" rows="5"><%=category.CategoryDes%></textarea>
                            </div>
                            <div class="form-group">
                              <label for="CategoryImg">Image</label>
                              <input type="file" id="CategoryImg" name="image" class="form-control">
                            </div>
                            <div class="form-group">
                              <label for="Priority">Priority</label>
                              <select class="form-control" name="CategoryOrder" id="Priority">
                                <%for(var i=1;i<6;i++){
                                  if(category.CategoryOrder==i){%>
                                    <option selected><%=i%></option>                                
                                  <%}else{%>
                                    <option><%=i%></option>                                
                                  <%}}%>
                              </select>
                            </div>
                            <div class="form-group">
                            <%if(category.enabled){%>
                              <label class="radio-inline"><input type="radio" name="enabled" value="1" checked><i class="label label-success">Active</i></label>
                              <label class="radio-inline"><input type="radio" name="enabled" value="0"><i class="label label-danger">Disable</i></label>
                            <%}else{%>
                              <label class="radio-inline"><input type="radio" name="enabled" value="1"><i class="label label-success">Active</i></label>
                              <label class="radio-inline"><input type="radio" name="enabled" value="0" checked><i class="label label-danger">Disable</i></label>
                            <%}%>
                            </div>
                          </div>
                          <div class="form-group">                            
                              <a href="/private/categories/categoryList" class="btn btn-secondary">Close</a>
                              <button type="submit" class="btn btn-primary">Save</button>                           
                          </div>
                        </form>
                      </div>
                    <%}%>
                  </div>
                  <!-- /.box-body -->
                </div>
                <!-- /.box -->
              </div>
            </div><br>

            <div class="row">
              <div class="col-xs-6">
                <div id="qty_piechart_3d" style="width: 100%; height: 500px;"></div>
              </div>
              <div class="col-xs-6">
                <div id="price_piechart_3d" style="width: 100%; height: 500px;"></div>
              </div>
            </div>
          </section>
          <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Main Footer -->
        <% include ../partials/footer%>

          <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
          <div class="control-sidebar-bg"></div>
  </div>
  <!-- ./wrapper -->

  <!-- REQUIRED JS SCRIPTS -->

  <!-- jQuery 2.2.3 -->
  <script src="/dashboard/plugins/jQuery/jquery-2.2.3.min.js"></script>
  <!-- Bootstrap 3.3.6 -->
  <script src="/dashboard/bootstrap/js/bootstrap.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/dashboard/dist/js/app.min.js"></script>

  <!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. Slimscroll is required when using the
     fixed layout. -->

</body>

</html>