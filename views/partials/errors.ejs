
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <%if (success_message != '') { %>
                <div class="alert alert-success">
                    <%= success_message %>
                </div>
            <% } %>
            <%if (error_message != '') { %>
                <div class="alert alert-danger">
                    <%= error_message %>
                </div>
            <% } %>
            <%if (error != '') { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %>
            
            <%if (errors != '') { %>
                <div class="alert alert-danger">
                <% for(var i=0; i < errors.length; i++) { %>	
                    <ul>
                        <li><%= errors[i].msg %></li>					
                    </ul>
                <%}%>				
                </div>
            <% } %>
        </div>
    </div>
</div>